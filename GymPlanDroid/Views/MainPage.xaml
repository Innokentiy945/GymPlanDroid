<?xml version="1.0" encoding="utf-8" ?>  
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"  
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  
             x:Class="GymPlanDroid.Views.MainPage"
             Title="Your gym plan Brother!">
          
        <ScrollView>
            <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Button Text="Torso One"
                    x:Name="btn1"
                    VerticalOptions="CenterAndExpand"
                    HorizontalOptions="Center"
                    HeightRequest="{Binding Width, Source={x:Reference btn1}}"
                    Clicked="ToModalPageTorsoOne"
                    Grid.Row="0"
                    Grid.Column="0"/>
            <Button Text="Torso Two"
                    VerticalOptions="CenterAndExpand"
                    HorizontalOptions="Center"
                    HeightRequest="{Binding Width, Source={x:Reference btn1}}"
                    Clicked="ToModalPageTorsoTwo"
                    Grid.Row="0"
                    Grid.Column="1"/>
            <Button Text="Torso Three"
                    VerticalOptions="CenterAndExpand"
                    HorizontalOptions="Center"
                    HeightRequest="{Binding Width, Source={x:Reference btn1}}"
                    Clicked="ToModalPageTorsoThree"
                    Grid.Row="0"
                    Grid.Column="2"/>
            <Button Text="Arm One"
                    VerticalOptions="CenterAndExpand"
                    HorizontalOptions="Center"
                    HeightRequest="{Binding Width, Source={x:Reference btn1}}"
                    Clicked="ToModalPageTorsoOne"
                    Grid.Row="1"
                    Grid.Column="0"/>
            <Button Text="Arm Two"
                    VerticalOptions="CenterAndExpand"
                    HorizontalOptions="Center"
                    HeightRequest="{Binding Width, Source={x:Reference btn1}}"
                    Clicked="ToModalPageTorsoOne"
                    Grid.Row="1"
                    Grid.Column="1"/>
            <Button Text="Arm Three"
                    VerticalOptions="CenterAndExpand"
                    HorizontalOptions="Center"
                    HeightRequest="{Binding Width, Source={x:Reference btn1}}"
                    Clicked="ToModalPageTorsoOne"
                    Grid.Row="1"
                    Grid.Column="2"/>
            
            <Button Text="Back One"
                    VerticalOptions="CenterAndExpand"
                    HorizontalOptions="Center"
                    HeightRequest="{Binding Width, Source={x:Reference btn1}}"
                    Clicked="ToModalPageTorsoOne"
                    Grid.Row="2"
                    Grid.Column="0"/>
            
            <Button Text="Back Two"
                    VerticalOptions="CenterAndExpand"
                    HorizontalOptions="Center"
                    HeightRequest="{Binding Width, Source={x:Reference btn1}}"
                    Clicked="ToModalPageTorsoOne"
                    Grid.Row="2"
                    Grid.Column="1"/>
            
            <Button Text="Back Three"
                    VerticalOptions="CenterAndExpand"
                    HorizontalOptions="Center"
                    HeightRequest="{Binding Width, Source={x:Reference btn1}}"
                    Clicked="ToModalPageTorsoOne"
                    Grid.Row="2"
                    Grid.Column="2"/>
            
            <Button Text="Legs One"
                    VerticalOptions="CenterAndExpand"
                    HorizontalOptions="Center"
                    HeightRequest="{Binding Width, Source={x:Reference btn1}}"
                    Clicked="ToModalPageTorsoOne"
                    Grid.Row="3"
                    Grid.Column="0"/>
            
            <Button Text="Legs Two"
                    VerticalOptions="CenterAndExpand"
                    HorizontalOptions="Center"
                    HeightRequest="{Binding Width, Source={x:Reference btn1}}"
                    Clicked="ToModalPageTorsoOne"
                    Grid.Row="3"
                    Grid.Column="1"/>
            
            <Button Text="Legs Three"
                    VerticalOptions="CenterAndExpand"
                    HorizontalOptions="Center"
                    HeightRequest="{Binding Width, Source={x:Reference btn1}}"
                    Clicked="ToModalPageTorsoOne"
                    Grid.Row="3"
                    Grid.Column="2"/>
            
            <Button Text="All Round One"
                    VerticalOptions="CenterAndExpand"
                    HorizontalOptions="Center"
                    HeightRequest="{Binding Width, Source={x:Reference btn1}}"
                    Clicked="ToModalPageTorsoOne"
                    Grid.Row="4"
                    Grid.Column="0"/>
            
            <Button Text="All Round Two"
                    VerticalOptions="CenterAndExpand"
                    HorizontalOptions="Center"
                    HeightRequest="{Binding Width, Source={x:Reference btn1}}"
                    Clicked="ToModalPageTorsoOne"
                    Grid.Row="4"
                    Grid.Column="1"/>
            
            <Button Text="All Round Three"
                    VerticalOptions="CenterAndExpand"
                    HorizontalOptions="Center"
                    HeightRequest="{Binding Width, Source={x:Reference btn1}}"
                    Clicked="ToModalPageTorsoOne"
                    Grid.Row="4"
                    Grid.Column="2"/>
        </Grid>
    </ScrollView>
  
</ContentPage>